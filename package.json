{
  "name": "command-line-application",
  "version": "0.10.1",
  "description": "A helpful wrapper around command-line-args and command-line-usage",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": "hipstersmoothie/command-line-application",
  "author": "Andrew Lisowski <lisowski54@gmail.com>",
  "scripts": {
    "build": "tsc",
    "start": "yarn build --watch",
    "test": "tsdx test",
    "release": "auto shipit"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "24.0.19",
    "@types/remove-markdown": "0.1.1",
    "auto": "7.12.0",
    "auto-config-hipstersmoothie": "1.0.4",
    "husky": "3.0.9",
    "jest-snapshot-serializer-ansi": "1.0.0",
    "prettier": "1.18.2",
    "pretty-quick": "2.0.0",
    "strip-ansi": "5.2.0",
    "tsdx": "0.14.1",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "chalk": "^2.4.1",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.0.0",
    "meant": "^1.0.1",
    "remove-markdown": "^0.3.0",
    "tslib": "1.10.0"
  },
  "jest": {
    "snapshotSerializers": [
      "jest-snapshot-serializer-ansi"
    ],
    "collectCoverage": true,
    "coverageDirectory": "target/coverage",
    "coverageReporters": [
      "text",
      "cobertura",
      "html",
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/src/**",
      "!**/__tests__/**",
      "!**/*.snap",
      "!**/dist/**"
    ]
  },
  "auto": {
    "extends": "hipstersmoothie"
  }
}
